#
# usage zotonic-start
#

cd $ZOTONIC
if [ -f $ZOTONIC_PIDFILE ]
then
	PID=`cat $ZOTONIC_PIDFILE`
	if ps -p $PID >&-
	then
		echo "\
Running: $SNAME@$HOSTNAME

Sites Status:
============="
	$ERL -noshell -pa $PA -name ${SNAME}_stop@$HOSTNAME -s zotonic status $SNAME@$HOSTNAME -s init stop
	echo
	else
		echo "Not Running (process '$PID' may have crashed or been killed)"
	fi 
else
	echo Not Running
fi
